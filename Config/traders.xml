<NavezganeExiles>

    <!-- Reducing Quality Cost Magnifier but increasing base Trader Buy Markup -->
    <set xpath="/traders/@buy_markup">2.25</set>
	<set xpath="/traders/@quality_mod">0.5,4</set>
	<!-- Reducing Trader Sell Markup to balance the increased economic values -->
	<set xpath="/traders/@sell_markdown">0.25</set>
	
	<!-- Reducing Quantity of higher tier materials offered by Trader -->
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='tools']/item[@name='resourceForgedSteel']/@count">1,20</set>
	<set xpath="/traders/trader_item_groups/trader_item_group[@name='generalResources']/item[@name='resourceForgedSteel']/@count">1,20</set>
	
	<!-- Small buff to Food Vending Machines item count -->
	<set xpath="/traders/trader_info[@id='4']/@max_inventory">15</set>
	<set xpath="/traders/trader_info[@id='4']/@max_items_swapped">15</set>
	
	<!-- Adding new Rogue Worker book to trader -->
	<append xpath="/traders/trader_item_groups/trader_item_group[@name='perkBooks']">
		<item name="bookRogueWorker1BrainPicker"/>
		<item name="bookRogueWorker2ConstructedHomicide"/>
		<item name="bookRogueWorker3BoneExcavation"/>
		<item name="bookRogueWorker4WastelandRescue"/>
		<item name="bookRogueWorker5DeadlyInnovation"/>
		<item name="bookRogueWorker6IndustrialApproach"/>
		<item name="bookRogueWorker7WorkersWill"/>
	</append>

</NavezganeExiles>